<div class="m-auto text-center py-10">
  <button class="tgt rounded-xl bg-white text-black py-2 px-8">Sumar</button>
  <br /><br />

  <label> Valor - Cuota del equipo:</label><br />
  <input
    class="text-black rounded-s py-1 px-2"
    type="text"
    id="txtNum1"
    name="txtNum1"
  /><br /><br />

  <label>Valor - Cuota de Fondo:</label><br />
  <input
    class="text-black rounded-s py-1 px-2"
    type="text"
    id="txtNum2"
    name="txtNum2"
  /><br /><br />

  <label>Valor - Pendiente:</label><br />
  <input
    class="text-black rounded-s py-1 px-2"
    type="text"
    id="txtNum3"
    name="txtNum3"
  /><br /><br />

  <label>Valor - Distancia:</label><br />
  <input
    class="text-black rounded-s py-1 px-2"
    type="text"
    id="txtNum4"
    name="txtNum4"
  /><br /><br />

  <label>El resultado es:</label><br />
  <input
    class="text-white rounded-s py-1 px-2"
    type="text"
    id="txtResult"
    name="txtResult"
    disabled
  /><br /><br />
</div>

<script>
  const buttons = document.querySelectorAll("button.tgt");
  buttons.forEach((button) => {
    button.addEventListener("click", () => {
      let num1 = Number(
        (document.getElementById("txtNum1") as HTMLInputElement).value
      );
      let num2 = Number(
        (document.getElementById("txtNum2") as HTMLInputElement).value
      );
      let num3 = Number(
        (document.getElementById("txtNum3") as HTMLInputElement).value
      );
      let num4 = Number(
        (document.getElementById("txtNum4") as HTMLInputElement).value
      );

      const sum =
        Math.round((num1 - (num2 - (num3 / 1000) * 1.2) + num4) * 100) / 100;
      (document.getElementById("txtResult") as HTMLInputElement).value =
        String(sum);
    });
  });
</script>
